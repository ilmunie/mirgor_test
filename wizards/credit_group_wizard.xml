<?xml version="1.0"?>
<odoo>
    <record id="view_credit_group_wizard_form" model="ir.ui.view">
        <field name="name">credit.group.wizard.form</field>
        <field name="model">credit.group.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Credit Groups">
                <group>
                    <field name="credit_group_id"/>
                </group>
                <footer>
                    <button string="Print" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_credit_group_wizard" model="ir.actions.act_window">
        <field name="name">Credit Group Report</field>
        <field name="res_model">credit.group.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_credit_group_report"
          name="Credit Group Report"
          parent="sale.menu_sale_report"
          action="action_credit_group_wizard"
          sequence="20"/>
</odoo>