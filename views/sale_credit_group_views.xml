<odoo>
    <record id="view_credit_group_tree" model="ir.ui.view">
        <field name="name">sale.credit.group.tree</field>
        <field name="model">sale.credit.group</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" editable="top">
                <field name="name"/>
                <field name="code"/>
                <field name="sale_channel_id"/>
                <field name="global_credit"/>
                <field name="used_credit"/>
                <field name="available_credit"/>
                <field name="company_currency_id" invisible="1"/>
                <button type="object" name="view_partners" class="oe_highlight" string="Customers"/>
            </tree>
        </field>
    </record>
    <record id="action_credit_group" model="ir.actions.act_window">
        <field name="name">Sale Credit Groups</field>
        <field name="res_model">sale.credit.group</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem id="menu_credit_group"
              name="Credit Groups"
              parent="sale.menu_sale_config"
              groups="sales_team.group_sale_manager"
              action="action_credit_group"/>
</odoo>